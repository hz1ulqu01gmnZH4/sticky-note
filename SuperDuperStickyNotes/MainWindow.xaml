<Window x:Class="SuperDuperStickyNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Super Duper Sticky Notes"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Visibility="Hidden"
        ShowInTaskbar="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Grid.Row="0" Background="#F5F5F5" BorderThickness="0,0,1,0" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Row="0" Margin="10" x:Name="SearchBox"
                         Tag="Search notes..."
                         Style="{StaticResource SearchTextBoxStyle}"/>

                <!-- Workspace Selector -->
                <ComboBox Grid.Row="1" Margin="10,0,10,10" x:Name="WorkspaceCombo">
                    <ComboBoxItem IsSelected="True">Default Workspace</ComboBoxItem>
                </ComboBox>

                <!-- Notes List -->
                <ListBox Grid.Row="2" x:Name="NotesList"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" Padding="10" Background="White"
                                    CornerRadius="5"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{Binding Title}"
                                               FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="1" Text="{Binding UpdatedAt, StringFormat='Updated: {0:g}'}"
                                               FontSize="10" Foreground="Gray"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- New Note Button -->
                <Button Grid.Row="3" Margin="10" Height="35" x:Name="NewNoteButton" Click="NewNoteButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="New Note" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Grid.Row="0" Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="#E0E0E0"/>

        <!-- Canvas Area -->
        <ScrollViewer Grid.Column="2" Grid.Row="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      x:Name="CanvasScroller">
            <Canvas x:Name="NotesCanvas"
                    Width="3000" Height="2000"
                    Background="#FAFAFA">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="CanvasScale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="CanvasTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </ScrollViewer>

        <!-- Command Bar -->
        <Border Grid.Row="1" Grid.ColumnSpan="3"
                Background="#2C2C2C"
                Height="40"
                x:Name="CommandBar"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text=">"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10,0,5,0"
                           FontFamily="Consolas"/>

                <TextBox Grid.Column="1"
                         x:Name="CommandInput"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         VerticalAlignment="Center"
                         FontFamily="Consolas"
                         CaretBrush="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>