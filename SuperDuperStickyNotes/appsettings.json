{
  "Application": {
    "Name": "Super Duper Sticky Notes",
    "Version": "1.0.0",
    "DefaultWorkspace": "default"
  },
  "Database": {
    "ConnectionString": "Data Source={AppData}\\SuperDuperStickyNotes\\notes.db;Version=3;"
  },
  "UI": {
    "DefaultNoteColor": "#FFEB3B",
    "DefaultNoteWidth": 250,
    "DefaultNoteHeight": 300,
    "CommandPaletteWidth": 600,
    "CommandPaletteHeight": 60
  },
  "Hotkeys": {
    "ToggleCommandPalette": "Ctrl+Space"
  },
  "Features": {
    "AutoSaveInterval": 2000,
    "EnableSystemTray": true,
    "MinimizeToTray": true,
    "StartMinimized": false,
    "EnableGlobalHotkeys": true
  }
}