<Window x:Class="SuperDuperStickyNotes.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - Super Duper Sticky Notes"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- TabControl for different settings categories -->
        <TabControl Grid.Row="1">
            <!-- General Settings -->
            <TabItem Header="General">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Startup" FontWeight="Bold" Margin="0,0,0,10"/>
                        <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="0,0,0,5"/>
                        <CheckBox x:Name="StartMinimizedCheckBox" Content="Start minimized to tray" Margin="0,0,0,20"/>

                        <TextBlock Text="Behavior" FontWeight="Bold" Margin="0,0,0,10"/>
                        <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Minimize to system tray" Margin="0,0,0,5"/>
                        <CheckBox x:Name="SingleInstanceCheckBox" Content="Allow only one instance" IsChecked="True" IsEnabled="False" Margin="0,0,0,20"/>

                        <TextBlock Text="Auto-Save" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Save interval (seconds):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="AutoSaveIntervalTextBox" Width="60" Text="2"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Appearance Settings -->
            <TabItem Header="Appearance">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Default Note Properties" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Default Color:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="DefaultColorComboBox" Width="200" HorizontalAlignment="Left" Margin="0,0,0,15">
                            <ComboBoxItem Content="Yellow" IsSelected="True"/>
                            <ComboBoxItem Content="Blue"/>
                            <ComboBoxItem Content="Green"/>
                            <ComboBoxItem Content="Pink"/>
                            <ComboBoxItem Content="Purple"/>
                            <ComboBoxItem Content="Orange"/>
                            <ComboBoxItem Content="Red"/>
                            <ComboBoxItem Content="Gray"/>
                        </ComboBox>

                        <TextBlock Text="Default Font Size:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="DefaultFontSizeComboBox" Width="100" HorizontalAlignment="Left" Margin="0,0,0,15">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="12"/>
                            <ComboBoxItem Content="13" IsSelected="True"/>
                            <ComboBoxItem Content="14"/>
                            <ComboBoxItem Content="16"/>
                        </ComboBox>

                        <TextBlock Text="Default Note Size" FontWeight="Bold" Margin="0,10,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Width:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="DefaultWidthTextBox" Width="60" Text="250"/>
                            <TextBlock Text="Height:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                            <TextBox x:Name="DefaultHeightTextBox" Width="60" Text="300"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Keyboard Shortcuts -->
            <TabItem Header="Shortcuts">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Global Shortcuts" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Command Palette:" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Ctrl+Space" VerticalAlignment="Center" FontFamily="Consolas"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="New Note:" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Ctrl+Shift+N" VerticalAlignment="Center" FontFamily="Consolas"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Search:" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Ctrl+Shift+F" VerticalAlignment="Center" FontFamily="Consolas"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Export/Import -->
            <TabItem Header="Export/Import">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Export Notes" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button x:Name="ExportJsonButton" Content="Export as JSON" Width="150" HorizontalAlignment="Left" Margin="0,0,0,5" Click="ExportJson_Click"/>
                        <Button x:Name="ExportMarkdownButton" Content="Export as Markdown" Width="150" HorizontalAlignment="Left" Margin="0,0,0,5" Click="ExportMarkdown_Click"/>
                        <Button x:Name="ExportCsvButton" Content="Export as CSV" Width="150" HorizontalAlignment="Left" Margin="0,0,0,20" Click="ExportCsv_Click"/>

                        <TextBlock Text="Import Notes" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button x:Name="ImportJsonButton" Content="Import from JSON" Width="150" HorizontalAlignment="Left" Margin="0,0,0,5" Click="ImportJson_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About -->
            <TabItem Header="About">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Super Duper Sticky Notes" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Version 1.1.0" Margin="0,0,0,5"/>
                        <TextBlock Text="A modern sticky notes application with advanced features" TextWrapping="Wrap" Margin="0,0,0,20"/>

                        <TextBlock Text="Features:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                            • Rich text editing with spell check<LineBreak/>
                            • Command palette (Ctrl+Space)<LineBreak/>
                            • Global hotkeys<LineBreak/>
                            • Full-text search<LineBreak/>
                            • Export/Import (JSON, Markdown, CSV)<LineBreak/>
                            • Tag support<LineBreak/>
                            • 8 color themes<LineBreak/>
                            • Auto-save<LineBreak/>
                            • System tray integration
                        </TextBlock>

                        <TextBlock Text="License: WTFPL" Margin="0,0,0,5"/>
                        <TextBlock Text="© 2025 - C# WPF Implementation" Margin="0,0,0,5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Height="30" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>